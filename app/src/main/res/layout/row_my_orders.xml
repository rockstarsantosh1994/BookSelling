<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_my_orders"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin5"
        android:layout_marginTop="@dimen/margin10"
        android:layout_marginRight="@dimen/margin5"
        android:layout_marginBottom="@dimen/margin10"
        app:cardBackgroundColor="@color/grey50"
        app:cardCornerRadius="@dimen/margin5">

        <LinearLayout
            android:id="@+id/ll_labour_click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_order_img"
                android:layout_width="@dimen/margin130"
                android:layout_height="@dimen/margin150"
                android:layout_marginLeft="@dimen/margin1"
                android:layout_marginTop="@dimen/margin5"
                android:layout_marginBottom="@dimen/margin5" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin5"
                android:layout_marginTop="@dimen/margin10"
                android:layout_marginRight="@dimen/margin5"
                android:layout_marginBottom="@dimen/margin10"
                android:layout_gravity="center_vertical"
                app:cardBackgroundColor="@color/grey50">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_order_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin10"
                        android:layout_marginTop="@dimen/margin5"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="Rajhans Milk , Sangmaner"
                        android:textColor="@color/green700"
                        android:textSize="@dimen/textsize18"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_order_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin10"
                        android:layout_marginTop="@dimen/margin5"
                        android:layout_marginRight="@dimen/margin10"
                        android:ellipsize="end"
                        android:maxLines="4"
                        android:text="Rajhans Milk , Sangmaner"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize12" />

                    <TextView
                        android:id="@+id/tv_order_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin10"
                        android:layout_marginTop="@dimen/margin5"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="1000"
                        android:textColor="@color/red700"
                        android:textSize="@dimen/textsize18"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/margin5"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!--    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorPrimaryDark" />-->
</LinearLayout>